/****** Object:  StoredProcedure [dbo].[crear_rm]    Script Date: 17/09/2022 11:56:52 ******/
SET ANSI_NULLS ON
GO
SET QUOTED_IDENTIFIER ON
GO
create procedure [dbo].[crear_rm] (
	@Acudiente int,
	@Administrativo int,
	@Estudiante int,
	@curso varchar(50)
)
as
begin
	Insert into Registro_Matricula (Fecha_Matricula,Valor_Matricula,Id_Estudiante_1,Id_Acudiente_1,Id_Persona_Admi_1,Curso)
	values (GETDATE(),200000,@Estudiante,@Acudiente,@Administrativo,@curso)
end
GO
USE [master]
GO
