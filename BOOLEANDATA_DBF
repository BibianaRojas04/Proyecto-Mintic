CREATE TABLE [dbo].[Registro_Matricula](
	[Id_Matricual] [int] IDENTITY(1,1) NOT NULL,
	[Fecha_Matricula] [datetime] NULL,
	[Valor_Matricula] [float] NULL,
	[Id_Estudiante_1] [int] NULL,
	[Id_Acudiente_1] [int] NULL,
	[Id_Persona_Admi_1] [int] NULL,
	[Curso] [varchar](50) NULL,
PRIMARY KEY CLUSTERED 
(
	[Id_Matricual] ASC
)WITH (PAD_INDEX = OFF, STATISTICS_NORECOMPUTE = OFF, IGNORE_DUP_KEY = OFF, ALLOW_ROW_LOCKS = ON, ALLOW_PAGE_LOCKS = ON, OPTIMIZE_FOR_SEQUENTIAL_KEY = OFF) ON [PRIMARY]
) ON [PRIMARY]
GO
ALTER TABLE [dbo].[Registro_Matricula]  WITH CHECK ADD  CONSTRAINT [fk_Matricula_Acudiente] FOREIGN KEY([Id_Acudiente_1])
REFERENCES [dbo].[Acudiente] ([Id_Acudiente])
GO
ALTER TABLE [dbo].[Registro_Matricula] CHECK CONSTRAINT [fk_Matricula_Acudiente]
GO
ALTER TABLE [dbo].[Registro_Matricula]  WITH CHECK ADD  CONSTRAINT [fk_Matricula_Estudiante] FOREIGN KEY([Id_Estudiante_1])
REFERENCES [dbo].[Estudiante] ([Id_Estudiante])
GO
ALTER TABLE [dbo].[Registro_Matricula] CHECK CONSTRAINT [fk_Matricula_Estudiante]
GO
ALTER TABLE [dbo].[Registro_Matricula]  WITH CHECK ADD  CONSTRAINT [fk_Matricula_Persona_Administrativo] FOREIGN KEY([Id_Persona_Admi_1])
REFERENCES [dbo].[Persona_Administrativo] ([IdPersonalAdministrativo])
GO
ALTER TABLE [dbo].[Registro_Matricula] CHECK CONSTRAINT [fk_Matricula_Persona_Administrativo]
