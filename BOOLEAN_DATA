	[Apellidos] [varchar](100) NULL,
	[Fecha_nacimiento] [date] NULL,
	[Parentesco] [varchar](100) NULL,
	[Ocupacion] [varchar](100) NULL,
	[Clave] [varchar](100) NULL,
	[usuario] [varchar](100) NULL,
	[rol] [varchar](100) NULL,
